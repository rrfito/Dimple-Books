<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Layer background putih -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <!-- Layer gradient stroke di sisi kanan -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/navy_blue_white"
            android:endColor="@color/white"
            android:angle="0"
            android:type="linear" />
            <stroke

                android:width="4dp"
                android:color="@android:color/transparent" />
            <padding android:left="0dp" android:top="0dp" android:right="4dp" android:bottom="0dp" />
        </shape>
    </item>

</layer-list>
