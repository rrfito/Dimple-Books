<?xml version='1.0' encoding='utf-8'?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130.0dp"
    android:layout_height="250.0dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="120.0dp"
        android:layout_height="160.0dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_card" />

        <androidx.cardview.widget.CardView
            android:layout_width="88.0dp"
            android:layout_height="120.0dp"
            app:cardCornerRadius="8dp"
            android:layout_gravity="center"
            app:cardElevation="8dp">

            <ImageView
                android:id="@+id/newestBookImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/book1" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/newestBookName"
        android:layout_width="120.0dp"
        android:layout_height="wrap_content"
        android:text="the Joker felix"
        android:gravity="center"

        android:textSize="10sp"
        android:textColor="@color/black"
        android:fontFamily="@font/quicksandbold"
        android:layout_marginTop="8.0dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPrice"
       android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginEnd="5dp"
        >

        <TextView
            android:id="@+id/newestBookPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="NOT FOR SALE"
            android:textColor="@color/white"
            android:textSize="8sp"

            android:fontFamily="@font/quicksandbold" />

    </androidx.cardview.widget.CardView>

</LinearLayout>
