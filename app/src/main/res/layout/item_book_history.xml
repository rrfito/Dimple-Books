<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    app:cardCornerRadius="10dp"

    app:cardUseCompatPadding="true"
    app:cardElevation="0dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/quicksandbold"
                android:id="@+id/urutanHistory"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:gravity="center"
                android:layout_margin="20dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                android:layout_marginEnd="15dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                >

                <ImageView
                    android:id="@+id/bookImageHistory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/book1" />

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Book Name -->
                <TextView
                    android:id="@+id/bookNameHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="The Prominence"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksandbold"
                    android:textSize="12sp"
                    android:textColor="@android:color/black" />

                <!-- Author and Publisher Information -->


                <TextView
                    android:id="@+id/authorHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:text="Lazarus"
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray" />





                <!-- Genre -->
                <TextView
                    android:id="@+id/genreHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/quicksandbold"
                    android:text="Action"
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray" />

                <!-- Number of Pages -->
                <TextView
                    android:id="@+id/readHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/quicksandbold"
                    android:text="2 hari yang lalu"
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>



        </LinearLayout>

<!--        <com.google.android.material.card.MaterialCardView-->
<!--            android:layout_marginTop="5dp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1dp"-->
<!--            app:strokeColor="#333333"-->
<!--            app:strokeWidth="1dp"/>-->

    </LinearLayout>










</androidx.cardview.widget.CardView>
