<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginStart="15dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_card">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="85dp"
                android:layout_height="110dp"
                app:cardCornerRadius="10dp"
                android:layout_marginEnd="15dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                >

                <ImageView
                    android:id="@+id/bookImageHistory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/book1" />

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Book Name -->
                <TextView
                    android:id="@+id/bookNameHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="The Prominence"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksandbold"
                    android:textSize="10sp"
                    android:textColor="@android:color/black" />

                <!-- Author and Publisher Information -->


                <TextView
                    android:id="@+id/authorHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:text="Lazarus"
                    android:textSize="8sp"
                    android:textColor="@android:color/darker_gray" />





                <!-- Genre -->
                <TextView
                    android:id="@+id/genreHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/quicksandbold"
                    android:text="Action"
                    android:textSize="8sp"
                    android:textColor="@android:color/darker_gray" />

                <!-- Number of Pages -->
                <TextView
                    android:id="@+id/readHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/quicksandbold"
                    android:text="2 hari yang lalu"
                    android:textSize="8sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>



        </LinearLayout>




    </LinearLayout>



</androidx.cardview.widget.CardView>
