<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_grey"
    tools:context=".UI.detailBook">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:background="@color/navy_blue_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <ImageView
        android:id="@+id/backFromDetail"
        android:layout_width="20dp"
        android:backgroundTint="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_height="20dp"
        android:background="@drawable/baseline_arrow_back_ios_24" />


    <LinearLayout
        android:layout_marginTop="40dp"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
       >



        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:id="@+id/bookDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/book1" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/bookNameDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Joker Felix"

            android:gravity="center"
            android:fontFamily="@font/quicksandbold"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/authorDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Antonio Montana"
            android:fontFamily="@font/quicksandbold"
            android:gravity="center"
            android:textSize="15dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/white" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/ratingDetail"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="4.4"

                        android:fontFamily="@font/quicksandbold"
                        android:textColor="@color/navy_blue_white"
                        android:textSize="15dp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/pageDetail"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="253"
                        android:fontFamily="@font/quicksandbold"
                        android:textColor="@color/navy_blue_white"
                        android:textSize="15dp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/LanguageDetail"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="English"
                        android:fontFamily="@font/quicksandbold"
                        android:textColor="@color/navy_blue_white"
                        android:textSize="15dp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/genreDetail"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Action"
                        android:fontFamily="@font/quicksandbold"
                        android:textColor="@color/navy_blue_white"
                        android:textSize="15dp"
                        android:gravity="center"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Rating"
                        android:fontFamily="@font/quicksandbold"

                        android:textSize="12dp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Pages"
                        android:fontFamily="@font/quicksandbold"

                        android:textSize="12dp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Language"
                        android:fontFamily="@font/quicksandbold"

                        android:textSize="12dp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Genre"
                        android:fontFamily="@font/quicksandbold"
                        android:textSize="12dp"
                        android:gravity="center"/>


                </LinearLayout>


            </LinearLayout>




        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Synopsis"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/quicksandbold"
            android:textColor="@color/black" />

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"

            >
            <TextView
                android:id="@+id/descriptionDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dalam sebuah desa kecil yang terisolasi, kehidupan sehari-hari berjalan lambat dan monoton. Cerita dimulai ketika Rina, seorang pemuda berjiwa petualang, menemukan sebuah peta tua yang menunjukkan lokasi sebuah harta karun yang hilang. Dengan semangat membara, Rina memutuskan untuk meninggalkan desanya dan mencari harta karun tersebut, yang konon dapat mengubah nasib siapa pun yang menemukannya.\n\nDi tengah perjalanannya, Rina bertemu dengan Dani, seorang penjelajah berpengalaman yang juga mengejar harta karun tersebut. Meskipun awalnya mereka bersaing, keduanya segera menyadari bahwa mereka memiliki tujuan yang sama dan memutuskan untuk bekerja sama. Dalam perjalanan yang penuh tantangan, mereka harus menghadapi berbagai rintangan, termasuk hutan lebat, cuaca ekstrem, dan jebakan yang dipasang oleh penjelajah sebelumnya."
                android:textSize="13sp"
                android:textColor="@color/black"

                android:fontFamily="@font/quicksandregular"
                android:lineSpacingExtra="4dp"/>




        </ScrollView>






    </LinearLayout>


</FrameLayout>