<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.fragment.description">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"

                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/bookImageDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/book1" />


            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/bookNameDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"

                android:gravity="center"
                android:text="The Joker Felix"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/authorDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"
                android:gravity="center"
                android:padding="5dp"
                android:text="Antonio Montana"
                android:textSize="12sp" />



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"

                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/publishedDateDetail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"

                            android:gravity="center"
                            android:text="4.4"
                            android:textColor="@color/navy_blue_white"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/pageCountDetail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:gravity="center"
                            android:text="253"
                            android:textColor="@color/navy_blue_white"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/LanguageDetail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:gravity="center"
                            android:text="English"
                            android:textColor="@color/navy_blue_white"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/CategoriesDetail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:gravity="center"
                            android:text="qwdqdqwdwqqwdqd"
                            android:textColor="@color/navy_blue_white"
                            android:textSize="10sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:gravity="center"

                            android:text="Released"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:gravity="center"

                            android:text="Pages"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:gravity="center"

                            android:text="Language"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppinsmedium"
                            android:gravity="center"
                            android:text="Categories"
                            android:textSize="11sp" />


                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/quicksandbold"
                android:gravity="center"
                android:text="description"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/descriptionDetail"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandregular"
                android:lineSpacingExtra="4dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Dalam sebuah desa kecil yang terisolasi, kehidupan sehari-hari berjalan lambat dan monoton. Cerita dimulai ketika Rina, seorang pemuda berjiwa petualang, menemukan sebuah peta tua yang menunjukkan lokasi sebuah harta karun yang hilang. Dengan semangat membara, Rina memutuskan untuk meninggalkan desanya dan mencari harta karun tersebut, yang koDi teoleh penjelajah sebelumnya."
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>


    </ScrollView>


</FrameLayout>