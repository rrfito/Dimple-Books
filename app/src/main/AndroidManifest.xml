<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="Dimple Books"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Refitoo"
        tools:targetApi="31">
        <activity
            android:name=".UI.basicListView.ListViewActivity"
            android:exported="false" />
        <activity
            android:name=".UI.activity.Auth"
            android:exported="false" />
        <activity
            android:name=".UI.activity.mainWelcomeScreen"
            android:exported="false" />
        <activity
            android:name=".UI.activity.buyItem"
            android:exported="false" />
        <activity
            android:name=".UI.activity.aboutUs"
            android:exported="false" />
        <activity
            android:name=".UI.activity.detailBook"
            android:exported="false" />
        <activity
            android:name=".UI.activity.MainNavigasi"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".UI.activity.GetStarted"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>